{
  "name": "sistema-pdv",
  "version": "1.0.0",
  "description": "Sistema de Ponto de Venda completo",
  "main": "backend/server.js",
  "scripts": {
    "install:all": "cd backend && npm install && cd ../frontend && npm install",
    "dev": "cd backend && node server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "start": "cd backend && node server.js",
    "build:frontend": "cd frontend && npm run build",
    "test:api": "node scripts/test-api.js",
    "deploy": "git add . && git commit -m \"Deploy: Atualizações\" && git push origin main"
  },
  "keywords": ["pdv", "ponto-de-venda", "vendas", "estoque"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
